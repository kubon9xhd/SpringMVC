package DocterController;

import static org.junit.Assert.*;

import org.junit.Assert;
import org.junit.Test;

public class DocterControllerTest {
	DocterController doctorTest = new DocterController();
	@Test
	public void testNameRightFormat() {
		String expResult = "Hung";
		String result = doctorTest.getName();
		if(expResult.equals(result)) {
			Assert.assertEquals(expResult,result);
		}else {
			fail("Test fail!! Name can not right format");
		}
	}
	@Test
	public void testNameEmpty() {
		String expResult = "";
		String result = doctorTest.getName();
		if(expResult.equals(result)) {
			Assert.assertEquals(expResult,result);
		}else {
			fail("Test Done!! Name can not right format");
		}
	}
	@Test
	public void testNameMoreThan50Characters() {
		String expResult = "aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa";
		String result = doctorTest.getName();
		if(expResult.equals(result)) {
			Assert.assertEquals(expResult,result);
		}else {
			fail("Test Done!! Name can not right format");
		}
	}
}
